rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /locations/{locationId} {

      function isValidLocationUpdate() {
        let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
        return !affectedKeys.hasAny(['createdAt', 'userId']);
      }

      allow create: if false;

      allow update: if get(/databases/$(database)/documents/locations/$(locationId)).data.userId == request.auth.uid
                    && isValidLocationUpdate();

      allow delete: if false;

      allow read: if request.auth != null;

      match /products/{productId} {
        allow create: if false;
        allow update: if false;
        allow delete: if false;
        allow read: if request.auth != null;
      }

      match /private/privateData {
        allow read: if get(/databases/$(database)/documents/locations/$(locationId)).data.userId == request.auth.uid;
        allow update: if false;
        allow delete: if false;
        allow create: if false;
      }

      match /sales/{saleId} {
        function isValidSaleCreate() {
          let data = request.resource.data;
          return data.keys().hasAll(['parentId', 'type', 'quantity', 'createdAt', 'paymentMethod', 'status']) 
            && data.parentId == locationId 
            && data.type == 'product';
        }

        function isValidSaleUpdate() {
          let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
          return affectedKeys.hasOnly(['status', 'updatedAt']);
        }

        allow create: if get(/databases/$(database)/documents/locations/$(locationId)).data.userId == request.auth.uid
                      && isValidSaleCreate();

        allow update: if get(/databases/$(database)/documents/locations/$(locationId)).data.userId == request.auth.uid
                      && isValidSaleUpdate();

        allow delete: if false;  // Sales should never be deleted

        allow read: if true;
      }

      match /specialSchedules/{specialScheduleId} {
        allow create: if false;
        allow update: if false;
        allow delete: if false;
        allow read: if request.auth != null;
      }
    }
    match /users/{userId} {

      function isValidCustomerUpdate() {
        let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
        let isCustomer = resource.data.userType == "customer";

        return isCustomer
          ? affectedKeys.hasOnly(['interests', 'isProfileCompleted'])
          : true;
      }

      function isValidPromoterUpdate() {
        let isPromoter = resource.data.userType == "promoter";
        let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
        
        return isPromoter
          ? affectedKeys.hasOnly(['description', 'interests', 'isProfileCompleted'])
          : true;
      }

    	allow create: if false;
              
    	allow update: if request.auth.uid == userId
                    && isValidCustomerUpdate()
                    && isValidPromoterUpdate();
    
      allow read: if request.auth != null;

      allow delete: if false;

      match /private/privateData {

        function isValidCustomerUpdate() {
          let isCustomer = resource.data.userType == "customer";
          let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
          
          return isCustomer
            ? false
            : true;
        }

        function isValidPromoterUpdate() {
          let isPromoter = resource.data.userType == "promoter";
          let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
          
          return isPromoter
            ? false
            : true;
        }

        allow update: if request.auth.uid == userId 
                      && isValidCustomerUpdate()
                      && isValidPromoterUpdate();

        allow read: if request.auth.uid == userId;

        allow delete: if false;

        allow create: if false;
      }
    }
    
    match /usernames/{username} {
    	allow create: if false;
                    
    	allow delete: if get(/databases/$(database)/documents/usernames/$(username)).data.userId == request.auth.uid;
      
      allow read: if request.auth != null;

      allow update: if false;
    }

    match /tickets/{ticketId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow read: if request.auth.uid == resource.data.promoterId ||
                  request.auth.uid == resource.data.ownerId;
    }

    match /events/{eventId} {

      function ownsEvent(eventId) {
        return request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/events/$(eventId)).data.promoterIds ;
      }

      function isValidEventUpdate() {
        let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
        return affectedKeys.hasOnly(['title', 'description', 'media']);
      }

      allow create: if false;
      allow update: if request.auth != null && ownsEvent(eventId) && isValidEventUpdate();
      allow delete: if request.auth != null && ownsEvent(eventId);
      allow read: if request.auth != null;

      match /sales/{saleId} {
        function isValidSaleCreate() {
          let data = request.resource.data;
          return data.keys().hasAll(['parentId', 'type', 'quantity', 'createdAt', 'paymentMethod', 'status']) 
            && data.parentId == eventId 
            && data.type == 'ticket';
        }

        function isValidSaleUpdate() {
          let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
          return affectedKeys.hasOnly(['status', 'updatedAt']);
        }

        allow create: if get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid
                      && isValidSaleCreate();

        allow update: if get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid
                      && isValidSaleUpdate();

        allow delete: if false;  // Sales should never be deleted

        allow read: if get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid
                    || resource.data.customerId == request.auth.uid;
      }
    }

    match /scanners/{scannerId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow read: if request.auth != null;
    }
  }
}
